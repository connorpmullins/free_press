# ===========================================
# Free Press - Environment Variables
# ===========================================
# Copy this to .env and fill in your values:
#   cp .env.example .env

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://freepress:freepress_dev@localhost:5432/freepress

# Redis
REDIS_URL=redis://localhost:6379

# Meilisearch
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=test-key

# Email
# Provider: "mailpit" for local dev, "resend" for production
EMAIL_PROVIDER=mailpit
EMAIL_FROM=noreply@freepress.news
SMTP_HOST=localhost
SMTP_PORT=1025

# Resend (production email)
# Get your API key at https://resend.com
RESEND_API_KEY=

# Stripe
# Get your keys at https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_MONTHLY_PRICE_ID=
STRIPE_ANNUAL_PRICE_ID=

# Stripe Identity (optional - for journalist verification)
STRIPE_IDENTITY_ENABLED=false

# Platform settings
PLATFORM_MARGIN=0.15
